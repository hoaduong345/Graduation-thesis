model Order {
  id          Int           @id @default(autoincrement())
  customerId  Int?
  customer    User?         @relation(fields: [customerId], references: [id])
  status      String?
  totalPrice  Int?
  coupon      String?
  createdAt   DateTime?     @default(now())
  updatedAt   DateTime?     @default(now())
  OrderDetail OrderDetail[]
  deletedAt   DateTime?
