// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  username    String?   @unique
  password    String
  verify      Boolean  @default(false)
  Token       Token[]
  name        String?
  phonenumber String?
  image       String?
  createdAt   DateTime @default(now())
  refresh_token String?
  forgotpassword_token String?
}

model Token {
  tokenid   Int      @id @default(autoincrement())
  User      User     @relation(fields: [userid], references: [id])
  userid    Int       @unique
  token     String
  createdAt DateTime @default(now())
}

model Product {
  idproduct       Int      @id @default(autoincrement())
  name      String
  price      Int
  rate       Int
  pricesale  Int
  sellingPrice Int
  discount   Int
  soldcount  Int
  description String
  count        Int
  status      String
  date         DateTime @default(now())
  images       String
  images_list  String
  idproductimage  Int?
  productimage ProductImage?  @relation(fields: [idproductimage], references: [idproduct])
  categoryname    String?
  category      Category?   @relation(fields: [categoryname], references: [name])
}

model Category {
  idcategory    Int         @id @default(autoincrement())
  name   String @unique
  date   DateTime    @default(now())
  products     Product[]   
}

model ProductImage {
  id   Int         @id @default(autoincrement())
  url   String @unique
  idproduct Int @unique
  products  Product[]
}





