}

model OrderDetail {
  id              Int       @id @default(autoincrement())
  productId       Int?
  orderId         Int?
  price           Int?
  quantity        Int?
  createdAt       DateTime? @default(now())
  updatedAt       DateTime? @default(now())
  fK_order        Order?    @relation(fields: [orderId], references: [id])
  fK_productOrder Product?  @relation(fields: [productId], references: [id])
  deletedAt       DateTime?
}

model Voucher {
  id        Int       @id @default(autoincrement())
  code      String?
  discount  Int?
  quantity  Int?
  startDay  DateTime?
  endDay    DateTime?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())
  deletedAt DateTime?
}

model Invoice {
  id             Int              @id @default(autoincrement())
  iduser         Int
  user           User             @relation(fields: [iduser], references: [id])
  invoiceDetails InvoiceDetails[]
}

model InvoiceDetails {
  id        Int     @id @default(autoincrement())
  invoice   Invoice @relation(fields: [idInvoice], references: [id])
  idInvoice Int
  cart      Cart    @relation(fields: [cartId], references: [id])
  cartId    Int
}


model Admin {
  id       Int      @id @default(autoincrement())
  username String?
  password String?
  // sentMessages ChatMessage[]@relation("SentMessagess")
  // receivedMessages ChatMessage[] @relation("ReceivedMessagess")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  sender    User     @relation("Sender", fields: [senderId], references: [id])
  senderId  Int
  receiver  User     @relation("Receiver", fields: [receiverId], references: [id])
  receiverId Int
  createdAt DateTime @default(now())
}